@using CourseWork1.Services
@inject AuthenticationService authenticateService
@inject NavigationManager navigationManager



<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">CourseWork1</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Login
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="addtransaction">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Add Transaction
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="viewtransactions">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> View Transaction
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="viewdebt">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> View Debt Details
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <button type="button" @onclick="Logout">Logout</button>
        </div>
    </nav>
</div>

@code{
    private async Task Logout()
    {
        try
        {
            authenticateService.Logout();
            navigationManager.NavigateTo("/");
        }
        catch(Exception ex)
        {
            Console.WriteLine($"Unexpected Error while logging out: {ex.Message}");
        }

    }
}
